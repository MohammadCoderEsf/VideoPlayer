<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerViewHome"
    android:layout_width="380dp"
    android:layout_height="292dp"
    android:layout_marginStart="7dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">



        <ImageView
            android:id="@+id/imageViewRecyclerHome"
            android:layout_width="330dp"
            android:layout_height="186dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_curses_android" />

        <TextView
            android:id="@+id/txtRecyclerHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/yekan_bakh_fa_num_regular"
            android:text="جامع ترین دوره آموزش برنامه نویسی اندروید (۱۵۰ ساعت با پشتیبانی ۲۴ ساعته)"
            android:textSize="16sp" />



</androidx.cardview.widget.CardView>