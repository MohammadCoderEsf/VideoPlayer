<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:background="@drawable/background_dialog_send_ticket"
    android:layout_height="345dp">

    <ImageView
        android:id="@+id/img_exit_circle_dialog"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_close_circle"
        app:layout_constraintEnd_toEndOf="@+id/edtTextTitle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/yekan_bakh_fa_num_regular"
        android:text="ارسال پیام به پشتیبانی"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtTextTitle"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_login_input_ticket"
        android:fontFamily="@font/yekan_bakh_fa_num_regular"
        android:hint="عنوان"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHint="#C4C4C4"
        android:textDirection="rtl"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText

        android:id="@+id/edtTextDetail"
        android:layout_width="335dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_login_input_ticket"
        android:fontFamily="@font/yekan_bakh_fa_num_regular"
        android:hint="متن پیام..."
        android:gravity="start"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="#C4C4C4"
        android:textColor="@color/black"
        android:textDirection="rtl"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edtTextTitle"
        app:layout_constraintStart_toStartOf="@+id/edtTextTitle"
        app:layout_constraintTop_toBottomOf="@+id/edtTextTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendTextToTelegram"
        android:layout_width="335dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="ارسال"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/yekan_bakh_fa_num_regular"
        android:background="@drawable/background_gradint"
        app:layout_constraintEnd_toEndOf="@+id/edtTextDetail"
        app:layout_constraintStart_toStartOf="@+id/edtTextDetail"
        app:layout_constraintTop_toBottomOf="@+id/edtTextDetail" />
</androidx.constraintlayout.widget.ConstraintLayout>