<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_daneshjooyar"
                android:layout_width="270dp"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/txt_daneshjooyar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="182dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toStartOf="@+id/cardView3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_daneshjooyar">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_10k_like" />

                <TextView
                    android:id="@+id/txtViewInDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="+۲۵,۰۰۰"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtStarToTeacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="بازدید روزانه"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="182dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toBottomOf="@+id/img_daneshjooyar">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_graduate_cap" />

                <TextView
                    android:id="@+id/txtCap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="+۴۰۰,۰۰۰"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtStudentTeacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="تعداد کاربران"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="182dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="@id/cardView2"
                app:layout_constraintStart_toStartOf="@+id/cardView2"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_about_university" />

                <TextView
                    android:id="@+id/txtUneversity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="+۲۰۰۰"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtAboutDetailClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="تعداد دوره ها"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="182dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="@+id/cardView3"
                app:layout_constraintStart_toStartOf="@+id/cardView3"
                app:layout_constraintTop_toBottomOf="@+id/cardView3">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_about_profile" />

                <TextView
                    android:id="@+id/txtNumberTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="+۵۰۰"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtDetailUniversity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="تعداد مدرسین"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:fontFamily="@font/yekan_bakh_fa_num_regular"
                android:text="ویژگی ها"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/cardView5"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/cardView5"
                app:layout_constraintTop_toBottomOf="@+id/cardView5" />


            <FrameLayout
                android:id="@+id/FrameLayout"
                android:layout_width="380dp"
                android:layout_height="353dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="#E9E8E8" />

                <FrameLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="#E9E8E8" />

                <ImageView
                    android:id="@+id/img_bilingual_certificate"
                    android:layout_width="158dp"
                    android:layout_height="110dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/img_bilingual_certificate" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_bilingual_certificate"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="مدرک دو زبانه"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16.17sp" />

                <ImageView
                    android:layout_width="158dp"
                    android:layout_height="110dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="40dp"
                    android:src="@drawable/img_professional_course" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_bilingual_certificate"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="دوره‌های تخصص محور"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16.17sp" />

                <ImageView
                    android:layout_width="158dp"
                    android:layout_height="110dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/img_top_teacher" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_bilingual_certificate"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="مدرسین مجرب"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16.17sp" />

                <ImageView
                    android:layout_width="158dp"
                    android:layout_height="110dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="40dp"
                    android:src="@drawable/img_education_charity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="48dp"
                    android:fontFamily="@font/yekan_bakh_fa_num_regular"
                    android:text="خیریه آموزشی"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16.17sp" />

            </FrameLayout>


            <TextView
                android:id="@+id/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/yekan_bakh_fa_num_regular"
                android:text="شبکه های اجتماعی"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/FrameLayout"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/FrameLayout"
                app:layout_constraintTop_toBottomOf="@id/FrameLayout"
                app:layout_constraintVertical_bias="0.0" />


            <FrameLayout
                android:id="@+id/frameLayoutInstagram"
                android:layout_width="182dp"
                android:layout_height="45dp"
                android:background="@drawable/img_instagram"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/frameLayoutYotube"
                app:layout_constraintTop_toBottomOf="@id/TextView" />

            <FrameLayout
                android:id="@+id/frameLayoutYotube"
                android:layout_width="182dp"
                android:layout_height="45dp"
                android:background="@drawable/img_youtube"
                app:layout_constraintEnd_toStartOf="@+id/frameLayoutInstagram"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/TextView" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frameLayoutYotube" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>